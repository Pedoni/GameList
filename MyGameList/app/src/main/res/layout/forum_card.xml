<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:strokeColor="#1E000000"
    app:strokeWidth="1dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forumCardImage"
            android:layout_width="100dp"
            android:layout_height="108dp"
            android:layout_margin="10dp"
            android:background="@color/purple_200"
            android:contentDescription="foto videogioco"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/forumTitleText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:text="Forum title"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#FFFFFF" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/forumGameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="3dp"
                android:text="Game name"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/forumMakerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="3dp"
                android:text="User name"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/replyView"
                    android:src="@drawable/ic_comment_24"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="3dp"
                    android:scaleType="fitXY"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/numberRepliesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="-2dp"
                    android:text="200"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>