<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:strokeColor="#1E000000"
    app:strokeWidth="1dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gameImageList"
            android:layout_width="100dp"
            android:layout_height="108dp"
            android:layout_margin="10dp"
            android:background="@color/purple_200"
            android:contentDescription="foto videogioco"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleGameCard"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Titolo"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#FFFFFF" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/consoleGameCard"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:text="Console"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/stateGameCard"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:text="State"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gameCardScore"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="4"
            android:gravity="bottom|center"
            android:textColor="#FFFFFF"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>